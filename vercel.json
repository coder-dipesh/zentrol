{
  "version": 2,
  "buildCommand": "python manage.py migrate --noinput && python manage.py collectstatic --noinput",
  "builds": [
    { "src": "manage.py", "use": "@vercel/python" }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "config/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}

